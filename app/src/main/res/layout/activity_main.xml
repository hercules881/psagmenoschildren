<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fonto6"

    tools:context=".MainActivity">




    <ImageView
        android:id="@+id/image"
        android:layout_width="310dp"
        android:layout_height="130dp"
        android:src="@drawable/boy3"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:padding="-8dp"

        />


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ας μάθουμε παίζοντας"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        />


    <Button
        android:id="@+id/enarxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:gravity="center_horizontal"
        android:layout_below="@id/image"
        android:layout_marginTop="55dp"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        android:clickable="true"
        android:soundEffectsEnabled="true"
        android:background="@drawable/text_corner"
        android:textAllCaps="false"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />


    <Button
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:gravity="center_horizontal"
        android:layout_below="@id/enarxi"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        android:clickable="true"
        android:soundEffectsEnabled="true"
        android:background="@drawable/text_corner"
        android:textAllCaps="false"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />


    <View
        android:id="@+id/pollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1d8ff"
        android:visibility="gone"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"

        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6177530795205721/2638295892">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
