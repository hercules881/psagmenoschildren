<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fonto"


    tools:context=".MainActivity">






    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ας μάθουμε παίζοντας"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="110dp"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="310dp"
        android:layout_height="130dp"
        android:src="@drawable/boy3"
        android:layout_marginTop="90dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:padding="-8dp"


        />

    <Button
        android:id="@+id/enarxi"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:layout_below="@id/image"
        android:layout_marginTop="85dp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:textSize="34sp"
        android:textStyle="bold"
        android:clickable="true"
        android:soundEffectsEnabled="true"
        android:background="@drawable/my_buttoncorner"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"

        />


    <Button
        android:id="@+id/title2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:gravity="center_horizontal"
        android:layout_below="@id/enarxi"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        android:clickable="true"
        android:soundEffectsEnabled="true"
        android:background="@drawable/my_buttoncorner"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        />

    <View
        android:id="@+id/pollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1d8ff"
        android:visibility="gone"/>




</RelativeLayout>
